		<script type="text/javascript">
			$(document).ready(function(){
				//Action items
				$("#new_action_item").bind("keypress", function(e){
					 if (e.keyCode != 13) return;
	
						var title = $("#new_action_item").val();
						if (!title) return;

						$("<li><p>"+ title +"</p></li>").insertBefore($("#action_items li").last());	
						$("#new_action_item").val("");
				});

				$("#mit_items li span").bind("dblclick", function(){

					var text = $(this).text();
					$(this).parent().append("<input type='text' value='"+ text +"'>")
						.bind("keypress",function(e){
							if (e.keyCode != 13) return;

							var newText = $(this).children("input").first().val();
							$(this).children().first().text(newText);

							$(this).children().first().show();
							$(this).children("input").first().detach();
						});
					
					$(this).hide();
				
				});
			});
		</script>

